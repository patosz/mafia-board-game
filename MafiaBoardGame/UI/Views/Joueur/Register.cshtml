@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@model  UI.Models.UserModel

@{
    ViewBag.Title = "Register";
}

<h2>Création de compte</h2>

<p class="lead">Veuillez remplir les champs ci-dessous afin de crée un nouveau compte :</p>
@if (ViewData["errorMessage"] != null)
{
    <p class="alert alert-danger">
        @ViewData["errorMessage"]
    </p>
}
@using (Html.BeginForm("Register", "Joueur", FormMethod.Post))
{
    @Html.ValidationSummary()

    <div class="form-group">
        <label>Nom d'utilisateur</label>
        @Html.TextBoxFor(m => m.Pseudo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Mot de passe</label>
        @Html.PasswordFor(m => m.Mdp, new { @class = "form-control" })
    </div>
    <input type="submit" value="S'enregistrer" class="btn btn-primary" />
}
