@model List<Domain.Dto.PartieDto>
@{
    //TODO ajouter un viewmodel
}
<h3>
    Parties disponibles
</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
                Date création
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    @p.Nom
                </td>
                <td>
                    @p.DateHeureCreation.Hour : @p.DateHeureCreation.Minute @p.DateHeureCreation.Day / @p.DateHeureCreation.Month / @p.DateHeureCreation.Year
                </td>
                <td>
                    <!-- Ajouter une bouton pour rejoindre la partie avec le nom de la partie et le nom du joueur -->
                    <a href="#" class="btn btn-primary">Rejoindre</a>
                </td>
            </tr>
        }
    </tbody>
</table>
