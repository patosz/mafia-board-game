@model Domain.JoueurDto

@{
    ViewBag.Title = "Your Account";
}

<h2>Mafia Game Board</h2>
<h3>Bienvenue @Model.Pseudo</h3>
<div class="navbar navbar-default">
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="javascript:showCreer()"> Créer partie </a>
                </li>
                <li>
                    @Html.ActionLink("Rejoindre", "Partie", new { pseudo = Model.Pseudo })
                </li>
                <li>
                    <a href="javascript:showVoirParties()"> Voir Parties </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div id="Creer">
    @{Html.RenderAction("Creer", new { controller = "Partie" });}
</div>

<div id="VoirParties" style="display:none;">
    @{Html.RenderAction("VoirParties", new { controller = "Partie" });}
</div>

<script type="text/javascript">
    function showCreer() {
        $('#VoirParties').hide();
        $('#Creer').show();
    }

    function showVoirParties() {
        $('#Creer').hide();
        $('#VoirParties').show();
    }
</script>
