@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@model Domain.Dto.GameStateDto

@{
    ViewBag.Title = "Partie" + ViewData["partie"];
}
<div class="row">
    @foreach (var adv in Model.Adversaires)
    {
    <div class="col-lg-2 col-lg-offset-1">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title adversaire">
                    @adv.Pseudo
                </h3>
            </div>
            <div class="panel-body">
                <div class="well opponent-des">
                    @for (var i = 0; i < adv.NbDes; i++)
                    {
                    <img src="~/Images/de_wazabi_mini.svg" />
                    }
                </div>

                <hr />
                <div class="well opponent-cartes">
                    @for (var i = 0; i < adv.NbDes; i++)
                    {
                    <img src="~/Images/dos_carte_mini.svg" />
                    }
                </div>
            </div>
        </div>
    </div>
    }
</div>

<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        <div class="well col-lg-3 col-lg-offset-2 pioche">
            <a data-toggle="popover">
                <img src="~/Images/dos_carte.svg" id="pioche" />
            </a>
        </div>
        <div class="well col-lg-3 col-lg-offset-2 defausse">
            <img src="~/Images/dos_carte.svg" id="defausse" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Joueur client
                </h3>
            </div>
            <div class="panel-body">
                <div class="well vos-des col-lg-4">
                    @foreach (var d in Model.Des)
                    {
                    <img src="~/Images/de_wazabi.svg" data-id="@d.Id" />
                    }
                </div>

                <div class="well vos-cartes col-lg-8">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">

                        <!-- Carousel items -->
                        <div class="carousel-inner">

                            @{
                            var NbCartes = Model.Cartes.Count;
                            var j = 0;
                            }

                            <div class="item active">
                                <div class="row">
                                    @for (; j < NbCartes && j < 4; j++)
                                    {
                                    <div class="col-sm-3">
                                        <img src="~/Images/dos_carte.svg" alt="Image" data-id="@Model.Cartes.ElementAt(j).Id" class="img-responsive carte-en-main" />
                                    </div>
                                    }
                                </div>
                            </div>


                            @{
                            var NbCartesRestantes = NbCartes - j;
                            }

                            @for (var i = 0; NbCartesRestantes > 0; i++)
                            {
                            <div class="item">
                                <div class="row">
                                    @for (j = 0; j < NbCartesRestantes && j < 4; j++)
                                    {
                                    <div class="col-sm-3">
                                        <img src="~/Images/dos_carte.svg" alt="Image" data-id="@Model.Cartes.ElementAt((i*4)+j).Id" class="img-responsive carte-en-main" />
                                    </div>
                                    }
                                </div>
                            </div>
                            NbCartesRestantes -= j;
                            }
                            }

                            <!-- Left and right controls -->
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>